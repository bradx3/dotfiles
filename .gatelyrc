main_disk = "/dev/disk0s2"
unused_disk_space = "df -h | grep \"#{ main_disk }\" | awk '{print \"Disk free: \", $4}'"
load = "uptime | awk -F'load averages:' '{ print \"CPU:\", $2 }'"

panel(:commands => [ unused_disk_space, load ], 
      :frame => [ 5, 5, 150, 40], 
      :refresh => 5)

panel(:frame => [ 5, 690, 300, 80 ],
      :commands => [ "icalBuddy eventsToday+1" ]) 


