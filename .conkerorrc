// switch to buffers 1-10 using keys
function define_key_buffer_switch(key, buf_num) {
    define_key(content_buffer_normal_keymap, key, function (I) {
            switch_to_buffer(I.window, I.window.buffers.get_buffer(buf_num));
        });
}
